@model IEnumerable<SolutionE_RH_v1._5.Models.EMPLOYEE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>

    <script>

        $('#demoGrid').dataTable({
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "pageLength": 5,

            "ajax": {
                "url": "/Demo/LoadData",
                "type": "POST",
                "datatype": "json"
            },
        });
    </script>
</head>



<center><h2>Liste des Employées</h2></center>

<p>
    @Html.ActionLink("Ajouter Employeé", "Create")
</p>
<div style="height: 400px; overflow: auto; width:100%; margin:0 auto;">

    <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CIN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NOM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PRENOM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SEXE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DATE_NAIS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SITUATION_FAM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NB_ENFANT)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.DATE_DEBCONTRAT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DATE_FINCONT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SERVICE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ADRESSE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TEL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EMAIL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DATE_EMBAUCHE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NB_JOURCONGE)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CIN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NOM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PRENOM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SEXE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DATE_NAIS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SITUATION_FAM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NB_ENFANT)
                </td>
             
                <td>
                    @Html.DisplayFor(modelItem => item.DATE_DEBCONTRAT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DATE_FINCONT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SERVICE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ADRESSE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TEL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EMAIL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DATE_EMBAUCHE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NB_JOURCONGE)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MATRECULE }, htmlAttributes: new { @class = "badge badge-primary" })
                    @Html.ActionLink("Details", "Details", new { id = item.MATRECULE }, htmlAttributes: new { @class = "badge badge-danger" }) 
                    @Html.ActionLink("Delete", "Delete", new { id = item.MATRECULE }, htmlAttributes: new { @class = "badge badge-info" })
                </td>
            </tr>
        }

    </table>
</div>
