@model IEnumerable<SolutionE_RH_v1._5.Models.FORMATION>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center><h2>Formations</h2></center>
<script>

        $('#demoGrid').dataTable({
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "pageLength": 5,

            "ajax": {
                "url": "/Demo/LoadData",
                "type": "POST",
                "datatype": "json"
            },
        });
</script>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LIB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DATE_DEPUT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NB_JOUR)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NB_PARTICIPE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DESC_SUJET)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NOM_FORMATEUR)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LIB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DATE_DEPUT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NB_JOUR)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NB_PARTICIPE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DESC_SUJET)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NOM_FORMATEUR)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.REF_FORMATION }) |
                @Html.ActionLink("Details", "Details", new { id = item.REF_FORMATION }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.REF_FORMATION })
            </td>
        </tr>
    }

</table>
