@model IEnumerable<SolutionE_RH_v1._5.Models.ABSENCE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>

        $('#demoGrid').dataTable({
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "pageLength": 5,

            "ajax": {
                "url": "/Demo/LoadData",
                "type": "POST",
                "datatype": "json"
            },
        });
</script>
<center><h5>List des absence</h5></center>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table  id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DATE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NB_JOUR)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JUSTIFIER)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RAIS_ABS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EMPLOYEE.CIN)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DATE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NB_JOUR)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JUSTIFIER)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RAIS_ABS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EMPLOYEE.CIN)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID_ABS }, htmlAttributes: new { @class = "badge badge-primary" }) 
                @Html.ActionLink("Details", "Details", new { id = item.ID_ABS },htmlAttributes: new { @class = "badge badge-danger" } ) 
                @Html.ActionLink("Delete", "Delete", new { id = item.ID_ABS }, htmlAttributes: new { @class = "badge badge-info" })
            </td>
        </tr>
    }

</table>
